APP_NAME=ResourceFlow
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.yourdomain.com

# Frontend URL - Used for Paystack callback, CORS, and Sanctum
# Must match your deployed frontend domain (no trailing slash)
FRONTEND_URL=https://yourdomain.com

# Sanctum - Add production domain for SPA auth (comma-separated if multiple)
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com

# CORS - Optional: comma-separated origins if different from FRONTEND_URL
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

LOG_CHANNEL=stack
LOG_LEVEL=warning

# Database - PostgreSQL recommended for production
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=resourceflow
DB_USERNAME=
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Paystack - Use live keys for production
# Get keys from https://dashboard.paystack.com
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# QoreID - Ghana Card verification (use test keys for development)
# Get keys from https://dashboard.qoreid.com
QOREID_SECRET_KEY=your_qoreid_secret_key
